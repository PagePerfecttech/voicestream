{
  "name": "cloud-playout-saas",
  "version": "1.0.0",
  "description": "Cloud Playout SaaS Platform - Channel Management System",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:e2e": "jest --config jest.config.js --testPathPattern=CompleteE2EIntegration",
    "test:all": "node scripts/run-integration-tests.js",
    "migrate": "knex migrate:latest",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:neon": "NEON_DATABASE_URL=$NEON_DATABASE_URL knex migrate:latest --knexfile knexfile.js --env neon",
    "seed": "knex seed:run",
    "seed:run": "knex seed:run",
    "test:neon": "ts-node scripts/test-neon-connection.ts",
    "health-check": "bash scripts/health-check.sh",
    "deploy": "bash scripts/deploy.sh",
    "deploy:prod": "bash scripts/deploy.sh production"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "child_process": "^1.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "hls.js": "^1.4.12",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "fast-check": "^3.13.2",
    "jest": "^29.7.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
